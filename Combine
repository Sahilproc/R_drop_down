   externalWorkbookPath = "C:\Users\sahil.kadam\Desktop\Micro"  ' Change this to the correct path
   externalWorkbookName = "File 2.xlsx"
   externalSheetName = "Sheet1"

   lastRow = mainWs.Cells(mainWs.Rows.Count, "J").End(xlUp).Row
   If lastRow < 2 Then
       MsgBox "No data found in column J.", vbCritical
       Exit Sub
   End If
   ' Add VLOOKUP formula to column K of the main sheet
   Set formulaRange = mainWs.Range("L2:L" & lastRow)
   formulaRange.Formula = "=VLOOKUP(J2, '" & externalWorkbookPath & "[" & externalWorkbookName & "]" & externalSheetName & "'!$A:$B, 2, FALSE)"
