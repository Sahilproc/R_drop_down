library(shiny)
library(DT)

# Define some example data
data <- data.frame(
  x = c(1, 2, 3),
  y = c(4, 5, 6),
  z = c(7, 8, 9)
)

# Define the UI
ui <- fluidPage(
  titlePanel("Table with Column Sums"),
  DTOutput("table")
)

# Define the server
server <- function(input, output) {
  
  # Render the table
  output$table <- renderDT({
    
    # Calculate the column sums
    col_sums <- sapply(data, sum)
    
    # Add a row to the data frame with the column sums
    data_with_sums <- rbind(data, col_sums)
    
    # Set the row names for the sums row
    row.names(data_with_sums)[nrow(data_with_sums)] <- "Total"
    
    # Show the table
    datatable(data_with_sums, rownames = TRUE)
  })
}

# Run the app
shinyApp(ui = ui, server = server)
